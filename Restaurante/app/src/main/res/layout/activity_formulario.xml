<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.fiap.persistencia.FormularioActivity"
    android:background="#f6f2f2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtRestaurante"
        android:hint="Nome do Restaurante"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtPreco"
        android:hint="PreÃ§o"
        android:layout_below="@+id/edtPrato"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtPrato" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtId"
        android:hint="ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtEspecialidade"
        android:hint="Especialidade"
        android:layout_below="@+id/edtRestaurante"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtPrato"
        android:hint="Prato Predileto"
        android:layout_below="@+id/edtEspecialidade"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtEspecialidade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtWebSite"
        android:hint="Web Site"
        android:layout_below="@+id/edtEndereco"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtEndereco" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratBar"
        android:numStars="5"
        android:max="5"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edtWebSite"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/edtTelefone"
        android:hint="Telefone"
        android:layout_below="@+id/edtPreco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtEndereco"
        android:hint="Endereco"
        android:layout_below="@+id/edtTelefone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
