<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<TextView android:text="@string/strAndroid" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtAndroid"
    android:layout_above="@+id/imgDadoAndroid"
    android:layout_alignEnd="@+id/textView" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imgDadoAndroid"
    android:src="@drawable/dado0"
    android:layout_marginBottom="44dp"
    android:layout_above="@+id/txtEmpate"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/strVoce"
    android:id="@+id/textView"
    android:layout_above="@+id/imgAndroidVoce2"
    android:layout_toStartOf="@+id/btnJogar" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imgAndroidVoce"
    android:src="@drawable/dado0"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/strResultado"
    android:id="@+id/txtResultado"
    android:layout_below="@+id/imgAndroidVoce"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="65dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Jogar"
    android:id="@+id/btnJogar"
    android:layout_marginTop="42dp"
    android:layout_alignTop="@+id/txtResultado"
    android:layout_centerHorizontal="true"
    android:onClick="jogar" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/strEmpate"
    android:id="@+id/txtEmpate"
    android:layout_above="@+id/textView"
    android:layout_toEndOf="@+id/btnJogar"
    android:visibility="invisible" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imgDadoAndroid2"
    android:src="@drawable/dado0"
    android:layout_below="@+id/txtAndroid"
    android:layout_toStartOf="@+id/txtEmpate" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imgAndroidVoce2"
    android:src="@drawable/dado0"
    android:layout_alignTop="@+id/imgAndroidVoce"
    android:layout_alignEnd="@+id/btnJogar" />

</RelativeLayout>
